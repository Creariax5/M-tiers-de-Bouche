// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id          String   @id @default(uuid())
  userId      String   // Propriétaire de la recette
  name        String
  description String?
  category    String?  // "Viennoiserie", "Pâtisserie", "Boulangerie", etc.
  servings    Int      @default(1) // Nombre de portions
  
  // Métadonnées
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([category])
  @@map("recipes")
}
